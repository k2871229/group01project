<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="dao.Order.Mapper">
     
    
     <resultMap id="OrderResult" type="Order">
     <id property="ord_code" column="ORD_CODE" />
     <result property="mem_code" column="MEM_CODE" />
     <result property="cls_code" column="CLS_CODE" />
     <result property="ord_date" column="ORD_DATE" />
     <result property="ord_total" column="ORD_TOTAL" />
     <result property="ord_cancel" column="ORD_CANCEL" />
     </resultMap>
	     
     
    <select id="selectOrderList" parameterType="Order" resultMap="OrderResult">
    SELECT * FROM studyingp.ordertbl
     </select>

	<select id="selectOrderOne" parameterType="Order" resultType="dto.Order">
    SELECT * FROM studyingp.ordertbl
    WHERE ORD_CODE = #{ORD_CODE}
 	</select>
     
     <insert id="insertOrder" parameterType="Order">
     INSERT INTO studyingp.ordertbl
     (ORD_CODE, MEM_CODE, CLS_CODE, ORD_DATE,
     ORD_TOTAL,ORD_CANCEL)
     VALUES
     (#{ORD_CODE}, #{MEM_CODE}, #{CLS_CODE},
     #{ORD_DATE}, #{ORD_TOTAL}, #{ORD_CANCEL})
    </insert>
     
    <update id="updateOrder" parameterType="Order">
    UPDATE studyingp.ordertbl
    SET
    ORD_CODE = #{ORD_CODE},
    MEM_CODE = #{MEM_CODE},
    CLS_CODE = #{CLS_CODE},
    ORD_DATE = #{ORD_DATE},
    ORD_TOTAL = #{ORD_TOTAL},
    ORD_CANCEL = #{ORD_CANCEL}
    WHERE ORD_CODE = #{ORD_CODE}
    </update>
 
 
    <delete id="deleteOrder" parameterType="Order">
    DELETE FROM studyingp.ordertbl
    WHERE ORD_CODE = #{ORD_CODE}
    </delete>

 
</mapper>