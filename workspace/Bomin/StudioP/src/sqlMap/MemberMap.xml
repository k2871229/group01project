<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="dao.MemberMapper">
   
     <resultMap id="MemberResult" type="Member">
     <id property="mem_code" column="MEM_CODE" />
     <result property="mem_id" column="MEM_ID" />
     <result property="mem_pw" column="MEM_PW" />
     <result property="mem_name" column="MEM_NAME" />
     <result property="mem_phone" column="MEM_PHONE" />
     <result property="mem_email" column="MEM_EMAIL" />
     <result property="mem_access" column="MEM_ACCESS" />
     <result property="mem_date" column="MEM_DATE" />
     <result property="mem_status" column="MEM_STATUS" />     
     </resultMap>
  	     
     
    <select id="selectMemberList" parameterType="Member" resultMap="MemberResult">
    SELECT * FROM studyingp.membertbl
     </select>
     
	<select id="selectMemberOne" parameterType="Member" resultType="dto.Member">
 	SELECT * FROM studyingp.membertbl
    WHERE MEM_CODE = #{MEM_CODE}
 	</select>
     
     <insert id="insertMember" parameterType="Member">
     INSERT INTO studyingp.membertbl
     (MEM_CODE, MEM_ID, MEM_PW, MEM_NAME, MEM_PHONE,
     MEM_EMAIL, MEM_ACCESS, MEM_DATE, MEM_STATUS)
     VALUES
     (#{MEM_CODE}, #{MEM_ID}, #{MEM_PW}, #{MEM_NAME},
     #{MEM_PHONE}, #{MEM_EMAIL},
     #{MEM_ACCESS}, #{MEM_DATE}, #{MEM_STATUS})
    </insert>

     
    <update id="updateMember" parameterType="Member">
    UPDATE studyingp.membertbl
    SET
    MEM_CODE = #{MEM_CODE}, MEM_ID = #{MEM_ID},
    MEM_PW = #{MEM_PW}, MEM_NAME = #{MEM_NAME},
    MEM_PHONE = #{MEM_PHONE}, MEM_EMAIL = #{MEM_EMAIL},
    MEM_ACCESS = #{MEM_ACCESS}, MEM_DATE = #{MEM_DATE},
    MEM_STATUS = #{MEM_STATUS}
    WHERE MEM_CODE = #{MEM_CODE}
    </update>
 
 
    <delete id="deleteMember" parameterType="Member">
    DELETE FROM studyingp.membertbl
    WHERE MEM_CODE = #{MEM_CODE}
    </delete>

 
</mapper>